generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SensorsData {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  mcu String
  cpuFrequency Float
  ramUsageKb Float
  ramUsagePercent Float
  temperature Float
  humidity Float
  pressure Float
  altitude Float
  uvLevel Int
  uvRisk Float
  uvIndex Int
  uvPower Float
  illuminance Float
  rainAnalog Int
  batteryVoltage Float
  batteryLevel Int
  batteryCharging Boolean
  date DateTime
}
